# unbind virtio-pci and bind prl_vid
KERNEL=="0000:01:00.0", DRIVER=="virtio-pci",\
	PROGRAM="/bin/sh -c '(echo -n %k > /sys/bus/pci/drivers/virtio-pci/unbind &&\
	[ ! -e /sys/bus/pci/device/%k/driver ] && echo -n %k > /sys/bus/pci/drivers/prl_vid/bind)'"
